<section class="mb-4">
  <h2>Comparisons of Daily and Weekly Post Counts</h2>
  <%= render partial: "books/compare-table", locals: {
    current_label: "today",
    past_label: "yesterday",
    current_books: books.created_today.count,
    past_books: books.created_days_ago(1).count
  } %>
  <%= render partial: "books/compare-table", locals: {
    current_label: "this week",
    past_label: "last week",
    current_books: books.created_this_week.count,
    past_books: books.created_last_week.count
  } %>
</section>

<section class="mb-4"><section>
  <% weekly = books.weekly_posted_counts %>
  <h2>Count of books posted</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-sm">
      <thead>
        <tr>
          <% weekly[:labels].each do |label| %>
            <th><%= label %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% weekly[:datas].each do |data| %>
            <td><%= data %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div>
    <%= render "books/posted-chart", books: @user.books %>
  </div>
</section>